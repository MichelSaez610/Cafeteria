<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegistreActivity">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/registre"
            android:textSize="41pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <EditText
            android:id="@+id/registreText"
            android:layout_width="209dp"
            android:layout_height="46dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/input_background"
            android:ems="10"
            android:hint="Name"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <EditText
            android:id="@+id/registrePass"
            android:layout_width="209dp"
            android:layout_height="46dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/input_background"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registreText" />

        <Button
            android:id="@+id/botonRegistrarse"
            android:layout_width="119dp"
            android:layout_height="64dp"
            android:layout_marginTop="52dp"
            android:text="REGISTER"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registrePass" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="516dp"
            android:layout_height="271dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/pink_semicircle"
            tools:ignore="MissingConstraints"
            tools:srcCompat="@drawable/pink_semicircle" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="516dp"
            android:layout_height="272dp"
            android:rotation="180"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/pink_semicircle"
            tools:ignore="MissingConstraints"
            tools:srcCompat="@drawable/pink_semicircle" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
