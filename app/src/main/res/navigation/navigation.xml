            android:id="@+id/action_home2_to_menjars"
            app:destination="@id/menjars" />
        <action
            android:id="@+id/action_home2_to_begudes"
            app:destination="@id/begudes" />
        <action
            android:id="@+id/action_home2_to_postres"
            app:destination="@id/postres" />
        <action
            android:id="@+id/action_home2_to_total"
            app:destination="@id/total" />
